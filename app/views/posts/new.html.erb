<%= form_with(model: @post, local: true) do |form| %>
  <div class="row my-4">
    <div class="col-md-6">
      <div class="form-group text-center ">
        <label class="btn btn-outline-primary py-5 mt-5">
          Upload an image
          <%= form.file_field :image, style: "display: none;" %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>
      <div class="form-group">
        <%= form.submit 'Submit', class: 'btn btn-primary btn-block' %>
      </div>
  
<% end %>
