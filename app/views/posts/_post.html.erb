<div class="card mx-auto my-5" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.user.name, post.user %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= time_ago_in_words(post.created_at) %> ago</h6>
    <p class="card-text"><%= post.body %></p>
    <span class="card-link"><%= link_to 'Edit', edit_post_path(post) %></span>
    <span class="card-link"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </div>
</div>